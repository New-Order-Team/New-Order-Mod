		<Radar_Map_Event name="Default_Click">
			<Event_Model_Name>I_minimap_default_click.alo</Event_Model_Name>
			<Event_Model_Scale>0.001</Event_Model_Scale>
			<Event_Duration>.8</Event_Duration>
